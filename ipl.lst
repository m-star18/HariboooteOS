   112                                          ; START BS_BootCode                                | 64      448
   113                                          ; (ブートストラッププログラム. システム依存フィールドで、未使用時はゼロで埋める。)
   114                                          ; 0x7c50
   115                                          ;
   116                                          ; rb (register byte),  rw (register word), rd (register double-word) 等の表記は
   117                                          ; https://www.intel.co.jp/content/dam/www/public/ijkk/jp/ja/documents/developer/IA32_Arh_Dev_Man_Vol2A_i.pdf
   118                                          ; によっている.
   119                                          ; >   | rb | rw | rd  |
   120                                          ; > 0 | AL | AX | EAX |
   121                                          ; > 1 | CL | CX | ECX |
   122                                          ; > 2 | DL | DX | EDX |
   123                                          ; > 3 | BL | BX | EBX |
   124                                          ; > 4 | AL | SP | ESP |
   125                                          ; > 5 | CL | BP | EBP |
   126                                          ; > 6 | DL | SI | ESI |
   127                                          ; > 7 | BL | DI | EDI |
   128                                          ; > imm8 － 即値バイト値。記号 imm8 は -128 から +127 までの符号付き数値である
   129                                          ; == 16 bit register ==
   130                                          ; AX : acumulator
   131                                          ; CX : Counter
   132                                          ; DX : Data
   133                                          ; BX : Base
   134                                          ; SP : Stack Pointer
   135                                          ; BP : Base  Pointer
   136                                          ; SI : Source      Index
   137                                          ; DI : Destination Index
   138                                          ; ES : Extra Segment
   139                                          ; CS : Code  Segment
   140                                          ; SS : Stack Segmengt
   141                                          ; DS : Data  Segmengt
   142                                          ; FS : no-name
   143                                          ; GS : no-name
   144                                  
   145                                  entry:
   146 00000050 B80000                          MOV     AX, 0           ; AX (rw1) に0(imm8)代入
   147 00000053 8ED0                            MOV     SS, AX
   148 00000055 BC007C                          MOV     SP, 0x7c00
   149 00000058 8ED8                            MOV     DS, AX
   150 0000005A 8EC0                            MOV     ES, AX
   151                                  
   152 0000005C BE[7400]                        MOV     SI, msg
   153                                  putloop:
   154 0000005F 8A04                            MOV     AL, BYTE [SI]   ; BYTE (accumulator low)
   155 00000061 83C601                          ADD     SI, 1           ; increment stack index
   156 00000064 3C00                            CMP     AL, 0           ; compare (<end msg>)
   157 00000066 7409                            JE      fin             ; jump to fin if equal to 0
   158                                  
   159                                                                  ; 一文字表示
   160 00000068 B40E                            MOV     AH, 0x0e        ; AH = 0x0e
   161 0000006A BB0F00                          MOV     BX, 15          ; BH = 0, BL = <color code>
   162 0000006D CD10                            INT     0x10            ; interrupt BIOS
   163                                                                  ; [INT(0x10); ビデオ関係 - (AT)BIOS - os-wiki](http://oswiki.osask.jp/?%28AT%29BIOS#n5884802)
   164 0000006F EBEE                            JMP     putloop
