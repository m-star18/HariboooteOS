    43                                          ; [INT(0x16); キーボード関係 - (AT)BIOS - os-wiki](http://oswiki.osask.jp/?%28AT%29BIOS#lb9f3e72)
    44                                          ; キーロック＆シフト状態取得
    45                                          ;   AH = 0x02;
    46                                          ;   戻り値：
    47                                          ;   AL == 状態コード：
    48                                          ;     bit0：右シフト
    49                                          ;     bit1：左シフト
    50                                          ;     bit2：Ctrl
    51                                          ;     bit3：Alt
    52                                          ;     bit4：Scrollロック
    53                                          ;     bit5：Numロック
    54                                          ;     bit6：Capsロック
    55                                          ;     bit7：Insertモード
    56                                          ; BIOS (16 bit mode) から情報を取得
    57 00000020 B402                            MOV     AH, 0x02    ; キーロック＆シフト状態取得
    58 00000022 CD16                            INT     0x16        ; Keyboard BIOS
    59 00000024 A2F10F                          MOV     [LEDS], AL  ; LED State
